//CLASS OPERACAO
public class Operacao {
    Public Decimal ValorA , ValorB ;
    Public Void somar(){
        System.debug(ValorA + ' + ' + ValorB +' = ' + (ValorA + ValorB));
    }
    Public Void subtrair(){
        System.debug(ValorA + ' - ' + ValorB + ' = ' + (ValorA - ValorB));
    }
    Public Void multiplicar(){
        System.debug(ValorA + ' X ' + ValorB + ' = ' + (ValorA * ValorB));
    }
    Public Void dividir(){
        System.debug(ValorA + ' / ' + ValorB + ' = ' + (ValorA / ValorB).setscale(2));
    }
}

--------------------------------------------------------------------------------
//1. 
Operacao O1 = New Operacao();
O1.ValorA = 1;
O1.ValorB = 1;
System.debug('A = ' + O1.ValorA + ' B = ' + O1.ValorB);
System.debug(O1);

O1.somar();
O1.subtrair();
O1.multiplicar();
O1.dividir();

Operacao O2 = New Operacao();

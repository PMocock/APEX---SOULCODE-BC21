//1.1 TESTE EM LOOP (TABUADA DO PEDRÃO)
//TABUADA DO PEDRÃO

Integer VA = 1;
Integer VB = 1;
Operacao O = New Operacao();

While (VA<= 10) {
    VB= 1;
    While (VB<= 9){
        O.ValorA = VA;
    	O.ValorB = VB;
    	System.debug(O);
    	O.somar();
    	O.subtrair();
    	O.multiplicar();
    	O.dividir();
    	VB++;
    }
    O.ValorA = VA;
    O.ValorB = VB;
    System.debug(O);
    O.somar();
    O.subtrair();
    O.multiplicar();
    O.dividir();
    VA++;
}				


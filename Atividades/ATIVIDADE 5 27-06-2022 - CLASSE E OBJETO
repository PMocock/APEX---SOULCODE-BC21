// TESTE CALCULO (LUCIO)

//CLASS CALCULO
public class Calculo {
    
    public void somadif(decimal n, string s, decimal l){
        if(s == '+'){
        decimal acao = n + l;
        system.debug(acao);
        } else if(s == '-'){
        decimal acao = n - l;
        system.debug(acao);
        } else if(s == '*'){
        decimal acao = n * l;
        system.debug(acao);
        } else if(s == '/'){
        decimal acao = n / l;
        system.debug(acao);
        }

        else{
            system.debug('Digite um operador matemático básico');
        }
    }
}
